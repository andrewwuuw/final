<div class="col-md-12">
  <div class="group">
    <%= link_to("新增討論版", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <br>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>版名</td>
        <td>版主</td>
        <td>描述</td>
        <td>＊</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group|  %>
      <tr>
        <td><%= link_to(group.title, group_path(group)) %></td>

        <% @users.each do |user| %>
          <% if user.id == group.user_id %>
            <td><%= user.name %></td>
          <% end %>
        <% end %>

        <td><%= group.description %></td>
        <td>
            <% if can? :update, group %>
              <%= link_to("編輯", edit_group_path(group), class: "btn btn-sm btn-default") %>
              <%= link_to("刪除", group_path(group), method: "delete", class: "btn btn-sm btn-default", data:{confirm: "Are you sure?"}) %>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
